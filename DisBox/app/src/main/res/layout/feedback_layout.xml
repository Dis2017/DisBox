<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:fitsSystemWindows="true"
	android:id="@+id/disBackground"
	android:background="@drawable/def_bg">

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#66000000"
		android:id="@+id/feedbacklayoutImageView1"/>

	<android.support.v7.widget.Toolbar
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:id="@+id/feedbackToolbar"
		android:background="#44000000">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textColor="#FFFFFF"
			android:textSize="20sp"
			android:text="意见反馈"/>

	</android.support.v7.widget.Toolbar>

	<Button
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="反馈"
		android:layout_alignParentBottom="true"
		android:layout_margin="5dp"
		android:id="@+id/feedbackBtn"
		android:background="@drawable/radius_rect_selector"/>

	<EditText
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:layout_margin="5dp"
		android:ems="10"
		android:hint="请在这里输入反馈意见"
		android:padding="10dp"
		android:id="@+id/feedbackEdt"
		android:layout_below="@id/feedbackToolbar"
		android:layout_above="@id/feedbackBtn"
		android:background="@drawable/radius_rect"
		android:gravity="top"/>

</RelativeLayout>

