<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical"
	android:id="@+id/disBackground">

	<ImageView
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:layout_marginBottom="100.5dp"
		android:layout_weight="1"
		android:scaleType="centerCrop"
		android:id="@+id/startImage"/>

	<TextView
		android:layout_height="100dp"
		android:layout_width="match_parent"
		android:background="#FFFFFF"
		android:layout_weight="4"
		android:gravity="center"
		android:textSize="40sp"
		android:textStyle="bold|italic"
		android:textColor="#000000"
		android:typeface="serif"
		android:text="@string/app_name"
		android:layout_alignParentBottom="true"
		android:id="@+id/startlayoutTextView1"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:text="@string/copyright"
		android:gravity="center"
		android:textSize="10sp"
		android:textStyle="italic"
		android:textColor="#888888"
		android:layout_alignParentBottom="true"/>

	<View
		android:layout_height="0.5dp"
		android:layout_width="match_parent"
		android:background="#CCCCCC"
		android:layout_above="@id/startlayoutTextView1"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:layout_alignParentRight="true"
		android:fitsSystemWindows="true"
		android:clipToPadding="true">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:layout_margin="5dp"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:padding="5dp"
			android:id="@+id/startCountDown"
			android:background="@drawable/count_down_bg"
			android:orientation="horizontal">

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:clickable="false"
				android:text="点击跳过"/>

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:clickable="false"
				android:id="@+id/startCountDownTime"/>

		</LinearLayout>

	</LinearLayout>

</RelativeLayout>

