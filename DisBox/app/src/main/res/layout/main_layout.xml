<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:fitsSystemWindows="true"
	android:id="@+id/disBackground"
	android:background="@drawable/def_bg"
	android:layout_height="match_parent"
	android:layout_width="match_parent">
	
	<View
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/main_layoutView"/>

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<View
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#66000000"/>

		<com.dis.box.CustomView.CustomBottomNavigationView
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:id="@+id/mainCustomBottomNavigationView"
			android:layout_alignParentBottom="true"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:background="#888888"
			android:layout_above="@id/mainCustomBottomNavigationView"
			android:id="@+id/mainlayoutView1"/>

		<com.dis.box.CustomView.CustomViewPager
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:layout_above="@id/mainlayoutView1"
			android:id="@+id/mainViewPager"/>

	</RelativeLayout>

	<Button
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#5f000000"
		android:text="好友模块\n暂未开放..."
		android:textSize="20sp"
		android:textColor="#FFFFFF"
		android:textStyle="bold|italic"
		android:gravity="center"
		android:layout_gravity="start"/>

</android.support.v4.widget.DrawerLayout>

